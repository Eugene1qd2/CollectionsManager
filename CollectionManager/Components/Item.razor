<form method="get" action="CollectionItems/View/@Model.item.EntireItemViewModelId">
    <button class="card border-1 rounded-2 p-0 my-1 btn btn-light w-100" type="submit">
        <h3 class="card-header w-100 text-start">
            <font class="opacity-50">@Model.collection.Title\</font><font class="opacity-75">@Model.item.Name</font>
        </h3>
        <div class="card-body">
            @if (Model.collection.CustomStringState1 == CollectionFieldState.TRUE)
            {
                <div class="d-flex">
                    <dt class="me-1">@Model.collection.CustomStringName1:</dt>
                    <dd>@Model.item.CustomStringField1</dd>
                </div>
            }
            @if (Model.collection.CustomIntState1 == CollectionFieldState.TRUE)
            {
                <div class="d-flex">
                    <dt class="text-start me-1">@Model.collection.CustomIntName1:</dt>
                    <dd>@Model.item.CustomIntField1</dd>
                </div>
            }
            @if (Model.collection.CustomDateState1 == CollectionFieldState.TRUE)
            {
                <div class="d-flex">
                    <dt class="text-start me-1">@Model.collection.CustomDateName1:</dt>
                    <dd>@Model.item.CustomDateField1</dd>
                </div>
            }
            <div class="d-flex">
                <small class="opacity-75 card-text">@Model.item.CreationDate</small>
            </div>
        </div>
    </button>
</form>

@code {
    [Parameter]
    public CollectionItemDataPair Model { get; set; }
}