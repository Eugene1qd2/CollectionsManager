@model CollectionManager.Models.User.EntireUserViewModel

@{
    ViewData["Title"] = "DeleteUser";
}
@{
    var culture = Context.Session.GetString("CurrentCulture");
    System.Threading.Thread.CurrentThread.CurrentUICulture = new System.Globalization.CultureInfo(culture == null ? "en-US" : culture);
}
<h3>@Localizer["Title"]</h3>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Localizer["Username"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Localizer["Email"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserEmail)
        </dd>
        <dt class="col-sm-2">
            @Localizer["Phone"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserPhone)
        </dd>
        <dt class="col-sm-2">
            @Localizer["Role"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserRole)
        </dd>
        <dt class="col-sm-2">
            @Localizer["Is Blocked"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsBlocked)
        </dd>
    </dl>

    <form asp-action="DeleteUser">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-action="Users">@Localizer["Back"]</a>
    </form>
</div>
