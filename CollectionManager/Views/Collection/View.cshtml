@model CollectionManager.Models.Collection.DataCollectionViewModel

@{
    ViewData["Title"] = "View";
}
<div>
    <div class="d-flex w-100 justify-content-between">
        <h4>User collection</h4>
        @if (Model.SetAsOwner)
        {
            <div>
                <a class="btn btn-success" asp-action="AppendItem" asp-controller="CollectionItems" asp-route-id="@Model.EntireCollectionViewModelId">Add new item</a>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.EntireCollectionViewModelId">Edit</a>
                <a class="btn btn-primary" asp-action="Profile" asp-controller="UserCollections" asp-route-id="@Model.OwnerId">Back to List</a>
            </div>
        }
    </div>
    <hr />
    <dl class="row">
        <div class="row mb-3">
            <div class="col-6">
                <h2>
                    @Html.DisplayFor(model => model.Title)
                </h2>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Theme):
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Theme)
                </dd>
            </div>
            <div class="col-6">
                <div style="width:100%;min-height:200px;background-image:url('@Model.PictureLink');background-size:contain;background-repeat:no-repeat;"></div>
            </div>
        </div>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            <markdown>
                @Markdown.ParseHtmlString(HtmlUtils.SanitizeHtml(Model.Description))
            </markdown>
        </dd>
    </dl>
    <dt>
        Items:
    </dt>
    <div class="row">
        @foreach(var item in Model.Items)
        {
            <partial name="_ItemPartial" model="new CollectionItemDataPair(item,Model)"/>
        }
    </div>
</div>

